// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {}
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-shift-u": "vim::ScrollUp",
      "ctrl-shift-d": "vim::ScrollDown",
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-shift-u z z"],
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-shift-d z z"],
      "ctrl-shift-h": "pane::ActivatePreviousItem",
      "ctrl-shift-l": "pane::ActivateNextItem",
      "space p f": "file_finder::Toggle",
      "space p j": "workspace::NewSearch",
      "space c a": "editor::ToggleCodeActions"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-;": "vim::FirstNonWhitespace",
      "ctrl-'": "vim::EndOfLine",
      "ctrl-k": "editor::ShowSignatureHelp"
    }
  },
  {
    "context": "Editor && VimControl",
    "bindings": {
      "ctrl-w z": "workspace::ToggleCenteredLayout"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space f e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor || Dock",
    "bindings": {
      "ctrl-=": ["zed::IncreaseBufferFontSize", { "persist": true }],
      "ctrl--": ["zed::DecreaseBufferFontSize", { "persist": true }],
      "ctrl-+": ["zed::IncreaseUiFontSize", { "persist": true }],
      "ctrl-shift-=": ["zed::IncreaseUiFontSize", { "persist": true }],
      "ctrl-_": ["zed::DecreaseUiFontSize", { "persist": true }],
      "ctrl-shift--": ["zed::DecreaseUiFontSize", { "persist": true }],
      "ctrl-0": ["zed::ResetBufferFontSize", { "persist": true }],
      "ctrl-)": ["zed::ResetUiFontSize", { "persist": true }]
    }
  },
  {
    "context": "EditMessageEditor > Editor",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-y": "menu::Confirm"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneDown",
      "ctrl-w j": "workspace::ActivatePaneUp",
      "space e": "workspace::ToggleLeftDock",
      "space f e": "project_panel::ToggleFocus"

      // Taken from docs, introduced just few hours before I'm creating these
      // https://github.com/zed-industries/zed/commit/00c2a300592a38e33b9e03000c1ba67d232bebee
      // "ctrl-w h": "workspace::ActivatePaneLeft",
      // "ctrl-w l": "workspace::ActivatePaneRight",
      // "ctrl-w k": "workspace::ActivatePaneUp",
      // "ctrl-w j": "workspace::ActivatePaneDown"
      // ... or other keybindings
    }
  }
]
